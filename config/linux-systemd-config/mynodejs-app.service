[Unit]
Description=My NodeJs App Server
Documentation=https://github.com/learningmyway/sample-nodejs-with-nginx#readme
Requires=nginx.service

[Service]
Type=simple
User=root
Group=root
TimeoutStartSec=0
Restart=on-failure
RestartSec=30s
ExecStart=/usr/bin/start-app.sh


[Install]
WantedBy=multi-user.target